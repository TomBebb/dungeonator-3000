{
    "include": [
        "src/*.ts",
        "src/scene/*.ts",
        "src/util/*.ts",
        "src/ui/*.ts",
        "src/path/*.ts"
    ],
    "compilerOptions": {
        "allowJs": true,
        "target":  "es5",
        "module": "amd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "lib": ["es6", "es2016", "dom"]
    }
}
