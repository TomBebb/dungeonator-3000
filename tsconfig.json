{
    "include": [
        "src/*.ts"
    ],
    "compilerOptions": {
        "target":  "es6",
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true
    }
}